<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sView_rec_hot"
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_120"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_24"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_115"
            android:layout_marginLeft="@dimen/dp_34"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_name_rec_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#fff"
                android:text="速度与激战"/>
            <TextView
                android:id="@+id/tv_score_rec_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="8.6分"/>
            <Button
                android:id="@+id/btn_buy_rec_hot"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_137"
                android:background="@drawable/rec_buy"
                android:text="购票"
                android:textColor="#fff"/>
        </LinearLayout>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_home_hot_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

</LinearLayout>
