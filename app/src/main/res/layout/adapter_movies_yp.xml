<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sView_rec_head"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            app:roundAsCircle="true"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_24"/>
        <TextView
            android:id="@+id/tv_name_yp"
            android:textSize="@dimen/sp_12"
            android:textColor="#fff"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_time_yp"
            android:textSize="@dimen/sp_12"
            android:textColor="#fff"
            android:layout_marginLeft="@dimen/dp_131"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_pl_yp"
        android:textSize="@dimen/sp_12"
        android:textColor="#fff"
        android:layout_marginTop="@dimen/sp_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_24"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_20">
        <ImageView
            android:id="@+id/img_dz"
            android:background="@drawable/dianzan"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18" />
        <TextView
            android:id="@+id/tv_dz_yp"
            android:textSize="@dimen/sp_10"
            android:textColor="#fff"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_replyNum_yp"
            android:layout_marginLeft="@dimen/dp_166"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="@dimen/dp_10"/>
    </LinearLayout>
</LinearLayout>
